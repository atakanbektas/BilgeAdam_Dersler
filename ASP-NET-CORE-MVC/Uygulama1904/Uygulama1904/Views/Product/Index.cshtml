@model List<Product>

@{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">İsim</th>
                <th scope="col">Stok Miktarı</th>
                <th scope="col">Kategori</th>
            </tr>
        </thead>

        <tbody>
            @{
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(i++)</th>
                        <td>@item.UrunId</td>
                        <td>@item.Isim</td>
                        <td>@item.StokMiktarı</td>
                        <td>@item.Kategori</td>
                    </tr>
                }
            }

        </tbody>
    </table>



}