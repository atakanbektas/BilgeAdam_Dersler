@model IEnumerable<Hayvan>




<div class="row container-fluid">
    @{
        foreach (var item in Model)
        {
            <div class="card col-md-3 shadow" style="width: 18rem;">
                <img src="~/pictures/@item.ResimYolu" class="card-img-top" alt="image">
                <div class="card-body shadow">
                    <h5 class="card-title ">@item.Ad</h5>
                    <p class="card-text ">@item.Aciklama</p>
                    <div >
                        <a href="#" class="btn btn-danger shadow ">Sil</a>
                        <a href="#" class="btn btn-warning shadow">Güncelle</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

